{
  "name": "margo",
  "version": "0.1.0",
  "description": "AI-powered PDF reader and annotation tool",
  "main": "main.js",
  "homepage": "https://github.com/pkukic/margo",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "pdf",
    "annotation",
    "ai",
    "research",
    "papers"
  ],
  "author": {
    "name": "Patrik Kukic",
    "email": "patrik@kukic.dev"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "katex": "^0.16.9",
    "marked": "^11.1.1",
    "pdfjs-dist": "^4.0.379"
  },
  "build": {
    "appId": "com.margo.pdfviewer",
    "productName": "Margo",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office;Viewer;",
      "mimeTypes": [
        "application/pdf"
      ],
      "icon": "assets/icons",
      "maintainer": "Patrik Kukic <patrik@kukic.dev>",
      "desktop": {
        "Name": "Margo",
        "Comment": "AI-powered PDF reader and annotation tool",
        "Keywords": "pdf;reader;annotation;ai;research;papers;",
        "StartupWMClass": "margo"
      }
    },
    "fileAssociations": [
      {
        "ext": "pdf",
        "name": "PDF Document",
        "mimeType": "application/pdf",
        "role": "Viewer"
      }
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*.py", ".env", "requirements.txt", "pyproject.toml", "!.venv/**", "!**/__pycache__/**"]
      }
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  }
}
